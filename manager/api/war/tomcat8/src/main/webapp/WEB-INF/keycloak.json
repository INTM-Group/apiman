{
  "realm": "${env.APIMAN_KEYCLOAK_REALM:apiman}",
  "resource": "apiman",
  "auth-server-url": "${env.APIMAN_KEYCLOAK_URL:http://keycloak:8080/auth}",
  "ssl-required": "external",
  "use-resource-role-mappings": false,
  "enable-cors": true,
  "cors-max-age": 1000,
  "cors-allowed-methods": "POST, PUT, DELETE, GET",
  "bearer-only": false,
  "enable-basic-auth": true,
  "expose-token": true,
  "credentials" : {
    "secret" : "${env.APIMAN_KEYCLOAK_APIMAN_SECRET}"
  },
  "connection-pool-size": 20,
  "principal-attribute": "preferred_username",
  "allow-any-hostname": "${env.APIMAN_ALLOW_ANY_HOST:false}",
  "redirect-rewrite-rules": {
    "^(.*)$" : "${env.APIMAN_KEYCLOAK_REDIRECT_PREFIX:}$1"
  },
  "disable-trust-manager": true
}
